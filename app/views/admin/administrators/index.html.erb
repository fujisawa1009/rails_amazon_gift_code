
<%= turbo_frame_tag "administrators_list" do %>
  <div class="container mt-4">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>管理者一覧</h2>
          <%= link_to '新規管理者登録', new_admin_administrator_path, class: 'btn btn-primary' %>
        </div>
        
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>メールアドレス</th>
                <th>ログイン回数</th>
                <th>最終ログイン</th>
                <th>作成日時</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @administrators.each do |admin| %>
                <tr>
                  <td><%= admin.id %></td>
                  <td><%= admin.email %></td>
                  <td><%= admin.sign_in_count %></td>
                  <td><%= l(admin.last_sign_in_at, format: :long) if admin.last_sign_in_at %></td>
                  <td><%= l(admin.created_at, format: :long) %></td>
                  <td>
                    <%= link_to '編集', edit_admin_administrator_path(admin), 
                        class: 'btn btn-sm btn-primary',
                        data: { turbo_frame: "administrators_list" } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>
