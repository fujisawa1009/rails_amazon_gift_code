
<%= turbo_frame_tag 'tab_content' do %>
  <div class="container mt-4">
    <h1>ギフトコード詳細</h1>
    
    <div class="card">
      <div class="card-body">
        <div class="mb-3">
          <strong>ユーザー:</strong>
          <%= @gift_code.user.name %>
        </div>
        
        <div class="mb-3">
          <strong>金額:</strong>
          <%= @gift_code.amount %>
        </div>
        
        <div class="mb-3">
          <strong>通貨:</strong>
          <%= @gift_code.currency_code %>
        </div>
        
        <div class="mb-3">
          <strong>ステータス:</strong>
          <%= @gift_code.status %>
        </div>
        
        <div class="mb-3">
          <strong>作成日時:</strong>
          <%= l @gift_code.created_at, format: :long %>
        </div>
      </div>
    </div>

    <%= link_to '戻る', admin_gift_codes_path, class: 'btn btn-secondary mt-3', data: { turbo_frame: 'tab_content' } %>
  </div>
<% end %>
